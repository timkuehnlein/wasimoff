// https://github.com/tsconfig/bases
{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "Node16",
    "target": "ES2020",
    "lib": ["ES2020"],

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },

  "include": ["src/**/*.ts"]
}
